<view class="user_view" >
<view class="flex-wrp" style="height: 500px;flex-direction:column;">
    <view class="flex-item">
        <image src="{{ image_url }}" binderror="binderror"
        class="user_pic"
        ></image>
    </view>
    <view class="flex-item" style="margin-top:18px">
         <text class="name"> {{repo_name}}</text>
    </view>
    <view class="flex-item" style="margin-top:10px">
          <text class="msg">{{repo_msg}}</text>
    </view>
  </view>
</view>

<view class="nav" style="flex-direction:row; width:screen.width">
  <view class="nav-li count_item" style="display:inline-block;">
  <view class="flex-wrp"style="flex-direction:column;">
        <view class="flex-item">
        <text class="num">{{stars}}</text>
        </view>
        <view class="flex-item">
        <text class="num_msg">Stargazers</text>
        </view>
  </view>
  </view>

<view class="nav-li count_item" style="display:inline-block;" >
<view class="flex-wrp" style="flex-direction:column;">
      <view class="flex-item">
      <text class="num">{{watchers}}</text>
      </view>
      <view class="flex-item">
      <text class="num_msg">Watchers</text>
      </view>
</view>
</view>

<view class="nav-li count_item_right" style="display:inline-block;" >
<view class="flex-wrp" style="flex-direction:column;">
      <view class="flex-item">
      <text class="num">{{forks}}</text>
      </view>
      <view class="flex-item">
      <text class="num_msg">Forks</text>
      </view>
</view>
</view>
</view>
<view style="height:20px;background: #E8E8E8;"></view>

<view style="flex-direction:column;">
 <view style="flex-direction:row;height: 30px;">
    <view class="item_left" style="flex-direction:row;display:inline-block;">
        <image class="jiantou"  src="../../assets/lock.png" style="vertical-align:middle"></image>
        <text style="line-height:30px;font-size:14px">{{ private }}</text>
    </view>
    <view class="item_right" style="flex-direction:row;display:inline-block;">

        <image class="jiantou"  src="../../assets/lan.png" style="vertical-align:middle"></image>
        <text style="line-height:30px;font-size:14px">{{ lan }}</text>
    </view>
 </view>

 <view style="flex-direction:row;height: 30px;">
    <view class="item_left" style="flex-direction:row;display:inline-block;">
        <image class="jiantou"  src="../../assets/rili.png" style="vertical-align:middle"></image>
        <text style="line-height:30px;font-size:14px">{{ create_time }}</text>
    </view>
    <view class="item_right" style="flex-direction:row;display:inline-block;">

        <image class="jiantou"  src="../../assets/size.png" style="vertical-align:middle"></image>
        <text style="line-height:30px;font-size:14px">{{ size }}</text>
    </view>
 </view>
</view>

<view style="height:20px;background: #E8E8E8;"></view>

<view  style="flex-direction:row;">
    <view class="btn_item" >
            <view  catchtap="owner" data-link="{{ owner}}" >
            <image class="jiantou" src="../../assets/owner.png"  style="vertical-align:middle;line-height:40px;" ></image>
            <text style="display:inline-block; line-height:40px;font-size:16px">Owner</text>
            <text style="margin-left:150px;vertical-align:middle;display:inline-block; line-height:40px;font-size:20px;"> {{ owner_name }}</text>
            
            </view>
    </view>
</view>

<view  style="flex-direction:row;">
    <view class="btn_item" >
            <view  catchtap="readme_click" data-link="{{ readme_link}}" >
            <image class="jiantou" src="../../assets/readme.png"  style="vertical-align:middle;line-height:40px;" ></image>
            <text style="display:inline-block; line-height:30px;font-size:16px;width:30px;line-height:40px;">Readme</text>
            <image  class="jiantou" src="../../assets/jiantou_btn.png" style="margin-left:260px;vertical-align:middle;line-height:40px;"></image>
            </view>
    </view>
</view>

<view  style="flex-direction:row;">
    <view class="btn_item" >
            <view  catchtap="code" data-link="{{ code_link}}" >
            <image class="jiantou" src="../../assets/code.png"  style="vertical-align:middle;line-height:40px;" ></image>
            <text style="display:inline-block; line-height:40px;font-size:16px;width:30px">Source</text>
            <image  class="jiantou" src="../../assets/jiantou_btn.png" style="margin-left:260px;vertical-align:middle;line-height:40px;"></image>
            </view>
    </view>
</view>

 <view class="body-view">
    <loading hidden="{{hidden}}" bindchange="loadingChange">
      拼命加载中...
    </loading>
  </view>